{
  "type": "module",
  "name": "@hazae41/berith",
  "version": "1.1.35",
  "description": "WebAssembly port of Dalek's Ed25519 and X25519, Rust implementations of Ed25519 signatures and X25519 key exchange",
  "homepage": "https://github.com/hazae41/berith",
  "repository": "github:hazae41/berith",
  "author": "hazae41",
  "license": "Unlicense",
  "main": "./dist/cjs/src/node/index.cjs",
  "module": "./dist/cjs/src/node/index.cjs",
  "types": "./dist/types/src/node/index.d.ts",
  "sideEffects": false,
  "files": [
    "./dist/esm",
    "./dist/cjs",
    "./dist/types"
  ],
  "scripts": {
    "build:wasm": "cd wasm && rimraf pkg && wasm-pack build --target web --release",
    "build:dist": "rimraf dist && node build.js && rollup -c",
    "build": "npm run build:wasm && npm run build:dist",
    "test:node": "node ./dist/test/src/node/index.test.cjs",
    "test:deno": "deno run -A --unstable ./src/deno/mod.test.ts",
    "test": "npm run test:node && npm run test:deno",
    "example:deno": "deno run ./example/deno/mod.ts",
    "example:node": "cd ./example/node && npm ci && node ./index.js",
    "bench:deno": "cd ./bench/deno && deno bench --unstable --import-map=imports.json bench.ts",
    "bench:node": "cd ./bench/node && npm ci && node ./index.js",
    "prepare": "npm run build:dist"
  },
  "devDependencies": {
    "@hazae41/phobos": "^1.0.10",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^18.11.18",
    "rimraf": "^4.1.0",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-node-externals": "^5.1.0",
    "typescript": "^4.9.4"
  },
  "exports": {
    ".": {
      "types": "./dist/types/src/node/index.d.ts",
      "import": "./dist/cjs/src/node/index.cjs",
      "require": "./dist/cjs/src/node/index.cjs"
    }
  },
  "keywords": [
    "reproducible",
    "webassembly",
    "cryptography",
    "curve25519",
    "ed25519",
    "x25519",
    "signing",
    "signature",
    "key-exchange",
    "diffie-hellman",
    "ecdh",
    "ecdsa",
    "eddsa",
    "browser",
    "typescript",
    "rust",
    "unit-tested",
    "deno"
  ]
}
